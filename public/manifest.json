{
  "manifest_version": 3,
  "name": "Duck Blocker",
  "version": "1.0",
  "description": "Block websites to focus and work with a duck companion.",
  "options_page": "./src/pages/options/index.html",
  "action": {
      "default_popup": "./src/pages/popup/index.html"
  },
  "permissions": [
      "scripting",
      "tabs",
      "activeTab",
      "storage"
  ],
  "host_permissions": [
      "https://*/*",
      "http://*/*"
  ],
  "web_accessible_resources": [
    { 
      "resources": ["images/duck.jpg"],
      "matches": ["<all_urls>"]
    }
  ]
}